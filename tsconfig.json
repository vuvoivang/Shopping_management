{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // allow file js
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false, // all strict type checking option is off
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve", // keep the JSX as part of the output to be further consumed by another transform step
    "baseUrl": "src"
  },
  "include": [
    "src",
    "config/jest"
  ],
  "exclude": [
    "config/scripts",
    "node_modules",
    "cypress", // folders cypress - testing tool 
    "**/*.spec.js" // file unit test
  ]
}