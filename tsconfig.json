{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // allow file js
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // all strict type checking option
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve", // keep the JSX as part of the output to be further consumed by another transform step
    "baseUrl": "src",
    "noImplicitAny": true,
    "strictNullChecks": true, // check null/undefined
    "alwaysStrict": true // always use strict
  },
  "include": [
    "src",
    "config/jest"
  ],
  "exclude": [
    "config/scripts",
    "node_modules",
    "cypress", // folders cypress - testing tool 
    "**/*.spec.js" // file unit test
  ]
}